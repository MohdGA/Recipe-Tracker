<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Movies</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;600&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="/stylesheet/movies.css">
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-custom">
    <a href="/" class="navbar-brand">MovieWatchList</a>
  </nav>
  <main>
    <h1>Movies</h1>
    <a href="/movies/new" class="btn-add">+ Add New Movie</a>
  
    <% if(allMovies.length === 0) { %>
      <p style="text-align:center; color:#c9a76a;">No movies found. Add some!</p>
    <% } %>
    <% allMovies.forEach((movie) => { %>
       <% if(movie.user._id.equals(user._id)){ %>
      <div class="movie-card">
        <img src="<%= movie.image.url %>" alt="<%= movie.title %>" />
        <div class="movie-info">
          <h5><a href="/movies/<%= movie._id %>"><%= movie.title %></a></h5>

          <p><strong>Description:</strong> <%= movie.description %></p>

          <p>
         <% if(movie.isWatched){ %>
                  <strong>is watched:</strong> ✅
                <% }else{ %>
                  <strong>is watched:</strong> > ✖️
               <% } %>
          </p>

          <p><strong>Price:</strong> $<%= movie.price %></p>
      </div>
      </div>
      <% } %>
    <% }) %>
   </main>
  <!-- Bootstrap JS Bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>