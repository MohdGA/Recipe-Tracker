<%- include('partials/header.ejs') %>

 <% if(user){ %>
    <h3>🎬 Welcome <%=user.username%> Track What You Watch, Love What You Discover! 🍿</h3>

   <% movies.forEach((movie) => { %>

    <div class="card" style="width: 18rem;">
      <img src="<%=movie.image.url%>" class="card-img-top" alt="img pic">
      <div class="card-body">
        <h5 class="card-title">Name: <%=movie.title%></h5>
        <p class="card-text">Description:<%=movie.description%></p>
        <p class="card-text">Price:<%=movie.price%></p>
      </div>
    </div>

   <% }) %>

  <% }else{ %>
    <h3>🎬 Welcome guests Track What You Watch, Love What You Discover! 🍿</h3>
  <% } %>
  
 
</body>
</html>